<?xml version="1.0" encoding="UTF-8"?>

<language name="Swift"
          section="Sources"
          version="1"
          kateversion="5"
          extensions="*.swift"
          mimetype="text/x-swift"
          author="I. Elland (igor@elland.me)"
          license="MIT">
