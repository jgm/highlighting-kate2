            <item>#available</item>
            <item>#file</item>
            <item>#function</item>
            <item>#line</item>
            <item>#selector</item>
            <item>actor</item>
            <item>as</item>
            <item>associatedtype</item>
            <item>class</item>
            <item>continue</item>
            <item>convenience</item>
            <item>default</item>
            <item>deinit</item>
            <item>didSet</item>
            <item>dynamic</item>
            <item>enum</item>
            <item>extension</item>
            <item>fallthrough</item>
            <item>false</item>
            <item>final</item>
            <item>func</item>
            <item>get</item>
            <item>import</item>
            <item>indirect</item>
            <item>init</item>
            <item>inout</item>
            <item>is</item>
            <item>lazy</item>
            <item>let</item>
            <item>mutating</item>
            <item>nil</item>
            <item>nonmutating</item>
